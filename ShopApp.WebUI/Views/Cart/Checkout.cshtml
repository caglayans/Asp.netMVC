
@model OrderViewModel

<h1>Siparişi Tamamla</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <form method="POST" asp-controller="Cart" asp-action="Checkout">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="@Model.CartViewModel.Id">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName">İsim</label>
                    <input asp-for="@Model.FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName">Soyisim</label>
                    <input asp-for="@Model.LastName" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address">Adres</label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.City">Şehir</label>
                    <input asp-for="@Model.City" class="form-control">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone">Telefon</label>
                    <input asp-for="@Model.Phone" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email">E-Posta</label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Note">Sipariş Notunuz</label>
                    <textarea asp-for="@Model.Note" class="form-control"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
            </div>
            <h4 class="mb-3">Ödeme Bilgileri</h4>
            <hr class="mb-3">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardHolderName"></label>
                    <input asp-for="@Model.CardHolderName" class="form-control">
                    <span asp-validation-for="CardHolderName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CardNumber"></label>
                    <input asp-for="@Model.CardNumber" class="form-control">
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpireMonth"></label>
                    <input asp-for="@Model.ExpireMonth" class="form-control">
                    <span asp-validation-for="ExpireMonth" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpireYear"></label>
                    <input asp-for="@Model.ExpireYear" class="form-control">
                    <span asp-validation-for="ExpireYear" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Cvv"></label>
                    <input asp-for="@Model.Cvv" class="form-control">
                    <span asp-validation-for="Cvv" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Gönder</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Özet Bilgiler</span>
        </h4>
        <ul class="list-group mb-3">

            @foreach (var item in Model.CartViewModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.ProductName</h6>
                    </div>
                    <span class="text-muted">@item.Price.ToString("c")</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam (TL)</span>
                <strong>@Model.CartViewModel.TotalPrice().ToString("c")</strong>
            </li>
        </ul>

    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}