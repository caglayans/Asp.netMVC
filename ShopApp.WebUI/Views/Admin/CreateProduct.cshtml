@model ProductViewModel

<h1 class="h3">Ürün Oluştur</h1>
<hr />

<form asp-controller="Admin" asp-action="CreateProduct" method="post">
    <div class="row">
        <div class="col-md-8">

            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-2 form-label">Ürün İsmi</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Url" class="col-sm-2 form-label">Url</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                    <span class="text-danger" asp-validation-for="Url"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Description" class="col-sm-2 form-label">Ürün Açıklaması</label>
                <div class="col-sm-10">
                    <textarea id="editor" class="form-control" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="ImageUrl" class="col-sm-2 form-label">Resim Url</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl">
                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Price" class="col-sm-2 form-label">Fiyat</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary"> Ürün Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>

    <script>ClassicEditor
    .create(document.querySelector('#Description'))</script>
}