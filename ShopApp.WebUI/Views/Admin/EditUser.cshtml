
@model UserDetailsViewModel

<h1 class="h3">Kullanıcı Güncelle</h1>

<form method="post" class="mt-3">
    <input  type="hidden" asp-for="UserId"/>
    <div class="form-group row mb-2">
        <label asp-for="UserId" class="col-sm-2 col-form-label">İd</label>
        <div class="col-sm-10">
            <input asp-for="UserId" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">İsim</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Soyisim</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-2">
        <div class="form-check m-1 p-2">
            <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="EmailConfirmed">
                E-Posta Onayı
            </label>
        </div>
    </div>
   

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="UserList" class="btn btn-primary">İptal</a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5>Kullanıcının Rolleri</h5>
        </div>
        <div class="card-body">
            @if (Model.SelectedRoles.Any())
            {
                foreach (var role in Model.SelectedRoles)
                {
                    <h6 class="card-title">@role</h6>
                }
            }
            else
            {
                <h6 class="card-title">Henüz ait olduğu rol bulunmamaktadır.</h6>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="admin" asp-action="ManageUserRoles" asp-route-userId="@Model.UserId" style="width:auto" class="btn btn-primary">
                Rolleri Düzenle
            </a>
        </div>
    </div>

</form>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}