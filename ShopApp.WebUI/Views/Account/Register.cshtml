
@model RegisterViewModel

<h1 class="h3">Kayıt Oluştur</h1>
<hr />

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="FirstName" class="col-sm-2 form-label">İsim</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FirstName">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="LastName" class="col-sm-2 form-label">Soyisim</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="LastName">
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="UserName" class="col-sm-2 form-label">Kullanıcı Adı</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="UserName">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-2 form-label">Parola</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="RePassword" class="col-sm-2 form-label">Parola Tekrar</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RePassword">
                    <span class="text-danger" asp-validation-for="RePassword"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-2 form-label">E-Posta</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>


            <div class="mb-3 row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary"> Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

