
@model ListViewModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model.Products)
             {
                 <div class="col-md-4">
                     @await Html.PartialAsync("_Product", product)
                 </div>
             }
        </div>
        <div class="row">
            <div class="col">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        
                        @for (int i = 0; i < Model.PageInfo.totalPages(); i++)
                         {
                            if (String.IsNullOrEmpty(Model.PageInfo.CurrentCategory))
                            {
                                <li class="page-item @(Model.PageInfo.CurrentPage==i+1? "active":"")"><a class="page-link" asp-controller="Shop" asp-action="List" asp-route-page="@(i+1)">@(i+1)</a></li>
                            }
                            else
                            {
                                <li class="page-item @(Model.PageInfo.CurrentPage==i+1? "active":"")"><a class="page-link" asp-controller="Shop" asp-action="List" asp-route-category="@Model.PageInfo.CurrentCategory" asp-route-page="@(i+1)">@(i+1)</a></li>
                            }    
                         }
                         
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>







