
@model ProductDetailsViewModel


    <div class="card w-50 text-bg-light my-5">
        <div class="row  g-0">
            <div class="col-md-4 text-center">
                <img src="~/images/@Model.Product.ImageUrl" class="img-fluid rounded">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title mb-3">@Model.Product.Name</h5>
                    @foreach (var Category in Model.Categories)
                    {
                        <a asp-controller="Shop" asp-action="List" asp-route-category="@Category.Url" class="btn btn-link p-0 mb-3">@Category.Name</a>
                    }

                    <p class="card-text">@Html.Raw(Model.Product.Description)</p>

                    <h4 class="text-primary mb-3"> <i class="fa-solid fa-turkish-lira-sign"></i> @Model.Product.Price </h4>

                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                        <input type="hidden" name="Id" value="@Model.Product.Id" />
                        <div class="input-group mb-3">
                            <input type="number" class="form-control" name="quantity" value="1" min="1" step="1" />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa-solid fa-cart-plus"></i>Sepete Ekle
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
