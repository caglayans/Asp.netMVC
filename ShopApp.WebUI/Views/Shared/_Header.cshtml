<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-Primary border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShopApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 mr-auto ms-2">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Shop" asp-action="List" asp-route-category="">Ürünler</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">Sepetiniz</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="GetOrders">Siparişler</a>
                        </li>

                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="CategoryList">Yönetici Kategorileri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="ProductList">Yönetici Ürünleri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="RoleList">Roller</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="UserList">Kullanıcılar</a>
                            </li>
                        }
                    }


                    <li class="nav-item">
                        <form asp-controller="Shop" asp-action="Search" class="d-flex" role="search" method="get">
                            <input name="q" class="form-control" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </li>
                </ul>
                


                <ul class="navbar-nav ml-auto me-3">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Manage">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Çıkış</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                        </li>
                    }


                </ul>


            </div>
        </div>
    </nav>
</header>
